extends ../../../layouts/default

block head
  title Verify Email

block feet
    script(src='/views/signup/verify/index.js')

block body
  div.page-header
    h1 Email Verification
    #verify

    script(type='text/template', id='tmpl-verify')
      form.form-horizontal
        div.alerts
          |<% _.each(errors, function(err) { %>
          div.alert.alert-error
            |<%= err %>
          |<% }); %>
          |<% if (success) { %>
          div.alert.alert-info
            | Your email address has been verified. You may log in now.
          |<% } %>
          |<% if (id == undefined) { %>
          div.alert.alert-warning
            | You do not have a valid reset request.
          |<% } %>
        |<% if (!success && id != undefined) { %>
        p Enter your email address below to complete validation.
        div.control-group(class!='<%= errfor.email ? "error" : "" %>')
          label.control-label Email Address:
          div.controls
            input(type='email', name='email', value!='<%= email %>')
            span.help-inline <%= errfor.email %>
        div.form-actions
          button.btn.btn-primary.btn-verify(type='button') Verify Email
        |<% } %>